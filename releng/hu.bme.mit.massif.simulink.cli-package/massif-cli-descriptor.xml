<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
	<id>massif-cli</id>
	<baseDirectory>massif-cli</baseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>Example_MATLAB.slx</include>
				<include>Example.simulink</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.build.directory}/hu.bme.mit.massif.simulink.cli-package-${project.version}.jar</source>
			<destName>hu.bme.mit.massif.simulink.cli-package.jar</destName>
		</file>
	</files>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>hu.bme.mit.massif:hu.bme.mit.massif.simulink.cli</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<directory>scripts</directory>
						<includes>
							<include>CLI_CreateMassifModel_Example.m</include>
							<include>CLI_CreateMATLABModel_Example.m</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>